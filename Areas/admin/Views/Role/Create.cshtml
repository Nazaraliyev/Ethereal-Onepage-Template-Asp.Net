
@{
    ViewData["Title"] = "Create";
}

@model IdentityRole

<div class='container-fluid'>
	<h2 class="mb-5">New Role Create</h2>
	<form class="w-50" asp-area="admin" asp-controller="role" asp-action="create" method="post">
		<div class="mb-3">
			<label asp-for="@Model.Name" class="form-label">Role Name</label>
			<input class="form-control" asp-for="@Model.Name">
		</div>
		<button class="btn btn-primary" type="submit">Create</button> <a asp-area="admin" asp-controller="role" asp-action="index" class="ml-3 text-danger">Go Back</a>
	</form>
</div>
