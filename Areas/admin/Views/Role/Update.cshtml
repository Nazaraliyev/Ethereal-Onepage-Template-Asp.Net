@model IdentityRole

<div class='container-fluid'>
	<h2 class="mb-5">New Role Create</h2>
	<form class="w-50" asp-area="admin" asp-controller="role" asp-action="update" method="post">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3">
			<label asp-for="@Model.Name" class="form-label">Role Name</label>
			<input class="form-control" asp-for="@Model.Name">
		</div>
		<input asp-form="@Model.Id" hidden />
		<input asp-for = "@Model.ConcurrencyStamp" hidden />
		<button class="btn btn-primary" type="submit">Update Role</button> <a asp-area="admin" asp-controller="role" asp-action="index" class="ml-3 text-danger">Go Back</a>
	</form>
</div>

